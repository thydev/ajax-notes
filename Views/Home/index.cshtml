<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script src="~/js/jquery-3.3.1.js"></script>
    <link rel="stylesheet" href="~/css/style.css">
    <script src="~/js/app.js"></script>
    <title>Note</title>
</head>
<body>
    <div class="container">
        <div class="input-note">
            <div class="error"></div>
            <div class="success"></div>
            <form action="/activity/add" method="post" name="addnote" id="addnote">
                <input type="text" name="title" id="title" placeholder="Note title...">
                <button type="submit">Add Note</button>
            </form>
        </div><!--input note-->

        <div class="display-note">
            <h3>All Notes</h3>
            @foreach(var note in @ViewBag.notes) {
                string divname = "div-note-" + @note["id"];

                <div class="note" id = "@divname" >
                    <div class="title">
                        <h2>@note["title"]</h2>
                        <form action="/activity/delete/@note["id"]" method="post">
                            <button type="submit" class="delete"  id="@note["id"]">Delete</button>
                        </form>
                    </div>
                    <form action="/activity/update/@note["id"]" method="post">
                        <textarea name="description" id="description" cols="30" rows="10">@note["description"]</textarea>

                        <div class="action">
                            <button type="submit" class="update">Update</button>
                            <button type="button" class="cancel">Cancel</button>
                        </div>
                    </form>
                </div>
            }

